{

  "description": "Collect data while browsing social media platforms and instantly upload it for analysis",
  "manifest_version": 2,
  "name": "Tidal Tales Plugin",
  "version": "1.8.4",
  "homepage_url": "https://tidaltal.es",

  "icons": {
    "48": "images/logo-blue-48.ico",
    "96": "images/logo-blue-96.ico"
  },

  "browser_action": {
    "default_icon": "images/logo-blue-64.ico",
    "default_title": "Zeeschuimer-F Status"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "webNavigation", "<all_urls>", "storage", "downloads", "activeTab", "tabs",
    "unlimitedStorage"
  ],

  "incognito": "not_allowed",

  "background": {
    "scripts": [
      "inc/dexie.js",
      "inc/he.js",
      "js/zs-background.js",
      "modules/ig_stories.js"
      ]
  }
}
